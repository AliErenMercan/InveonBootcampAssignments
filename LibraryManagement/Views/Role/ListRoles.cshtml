@model IEnumerable<LibraryManagement.Models.Repositories.AppRole>

@{
    ViewData["Title"] = "List of Roles";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">List of Roles</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Role Name</th>
                <th>Description</th>
                <th>#</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                        <tr>
                            <td>@role.Name</td>
                            <td>@role.Description</td>
                            <td>@role.Id</td>
                            <td>
                                <!-- Edit Role butonu -->
                                <a href="@Url.Action("UpdateRole", "Role", new { id = role.Id })" class="btn btn-warning btn-sm">Edit</a>
                                <a href="@Url.Action("DeleteRole", "Role", new { id = role.Id })" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
            }
        </tbody>
    </table>
</div>
